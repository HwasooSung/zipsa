<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <Button
        android:id="@+id/setting_activity_close_button"
        android:background="@drawable/close"
        android:layout_width="@dimen/close_button_width"
        android:layout_height="@dimen/close_button_height"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/close_button_height"
        android:background="@color/white"
        android:textColor="@color/text_black"
        android:paddingLeft="12.3dp"
        android:paddingTop="28dp"
        android:layout_toRightOf="@id/setting_activity_close_button"
        android:layout_marginLeft="2dp"
        />

</RelativeLayout>